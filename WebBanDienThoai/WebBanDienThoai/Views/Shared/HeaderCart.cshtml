@model List<WebBanDienThoai.Models.CartItem>

<div class="cart">
    <p>
            <span>Giỏ hàng:</span><div id="dd" class="wrapper-dropdown-2">
            @Model.Count sản phẩm - @Model.Sum(x => x.Product.Price.GetValueOrDefault(0) * x.Quantity) VND
            <ul class="dropdown">
                <li>Bạn có @Model.Count sản phẩm trong giỏ hàng!</li>
            </ul>
        </div>
    </p>
</div>
