
<div class="main">
    <div class="content">
        <div class="content_top">
            @foreach (var c in ViewBag.cate)
            {
                <div class="back-links">
                    <p><a href="/Home/Index">Trang chủ</a> / <a href="/danh-muc/@c.ID">@c.Name</a></p>
                </div>
                <div class="clear"></div>
            }
        </div>
        <div class="section group">
            @foreach (var item in ViewBag.productByCateId)
            {
                var url = "/add-to-cart?" + "productId=" + item.ID + "&" + "quantity=1";
                <div class="grid_1_of_4 images_1_of_4" style="display: inline-block">
                    <a href="/chi-tiet/@item.ID"><img sizes="40px" src="~/wwwroot/images/Products/@item.Image" alt="" /></a>
                    <h2>@item.Name</h2>
                    <div class="price-details">
                        <div class="price-number">
                            <p><span class="rupees">@item.Price.ToString("N0")</span> VND</p>
                        </div>
                        <div class="add-cart">
                            <h4><a href="@url">Thêm vào giỏ</a></h4>
                        </div>
                        <div class="clear"></div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

