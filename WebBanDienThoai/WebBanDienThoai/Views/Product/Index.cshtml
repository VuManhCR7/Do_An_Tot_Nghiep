@model WebBanDienThoai.Models.Product

<div class="main">
    <div class="content">
        <div class="content_top">
            <div class="heading">
                <h3>Sản phẩm mới</h3>
            </div>
            <div class="see">
                <p><a href="#">Xem tất cả</a></p>
            </div>
            <div class="clear"></div>
        </div>
        <div class="section group">
            @foreach (var item in ViewBag.listNewProducts)
            {

                <div class="grid_1_of_4 images_1_of_4" style="display: inline-block">
                    <a href="preview.html"><img sizes="40px" src="~/wwwroot/images/Products/@item.Image" alt="" /></a>
                    <h2>@item.Name</h2>
                    <div class="price-details">
                        <div class="price-number">
                            <p><span class="rupees">@item.Price</span>VNĐ</p>
                        </div>
                        <div class="add-cart">
                            <h4><a href="/add-to-cart?productId=@item.ID&quantity=1">Thêm vào giỏ</a></h4>
                        </div>
                        <div class="clear"></div>
                    </div>
                </div>

            }
        </div>


        <div class="content_bottom">
            <div class="heading">
                <h3>Sản phẩm hot</h3>
            </div>
            <div class="see">
                <p><a href="#">Xem tất cả</a></p>
            </div>
            <div class="clear"></div>
        </div>
        <div class="section group">
            @foreach (var item in ViewBag.listHotProducts)
            {
                <div class="grid_1_of_4 images_1_of_4" style="display: inline-block">
                    <a href="preview.html"><img sizes="40px" src="~/wwwroot/images/Products/@item.Image" alt="" /></a>
                    <h2>@item.Name</h2>
                    <div class="price-details">
                        <div class="price-number">
                            <p><span class="rupees">@item.Price</span>VNĐ</p>
                        </div>
                        <div class="add-cart">
                            <h4><a href="/add-to-cart?productId=@item.ID&quantity=1">Thêm vào giỏ</a></h4>
                        </div>
                        <div class="clear"></div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

