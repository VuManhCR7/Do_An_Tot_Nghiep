@model List<WebBanDienThoai.Models.CartItem>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
@{
    ViewBag.Title = "Payment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main">
    <div class="content">
        <div class="content-top">
            <div class="heading">
                <h3>Xác nhận thanh toán</h3>
            </div>
            <div class="clear"></div>
        </div>
        <div class="section group" style="display: grid;">
            @if (Model.Count > 0)
            {
            <table class="table" style="margin-top: 20px;">
                <thead>
                    <tr>
                        <th>Mã SP</th>
                        <th>Tên SP</th>
                        <th>Ảnh</th>
                        <th>Số lượng</th>
                        <th>Đơn giá</th>
                        <th>Thành tiền</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Product.ID</td>
                            <td>@item.Product.Name</td>
                            <td><img src="~/wwwroot/images/Products/@item.Product.Image" width="100" /></td>
                            <td><input type="text" class="txtQuantity" data-id="@item.Product.ID" value="@item.Quantity" /></td>
                            <td>@item.Product.Price.GetValueOrDefault(0).ToString("N0")</td>
                            <td>@((item.Product.Price.GetValueOrDefault(0) * item.Quantity).ToString("N0"))</td>
                            <td><a href="#" data-id="@item.Product.ID" class="btn-delete">Xoá</a></td>
                        </tr>
                    }

                </tbody>
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td><b>TỔNG TIỀN:</b></td>
                    <td> @(Model.Sum(x => x.Product.Price.GetValueOrDefault(0) * x.Quantity).ToString("N0")) VND</td>
                </tr>
            </table>             
            }        
        </div>
        <div class="section group">
            <div class="col-md-6">
                @using (Html.BeginForm("Payment", "Cart", FormMethod.Post))
                {
                    <div class="form-group">
                        <label>Họ tên</label>
                        <input name="name" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Số điện thoại</label>
                        <input name="mobile" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Địa chỉ</label>
                        <input name="address" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input name="email" class="form-control" />
                    </div>
                    <button type="submit" class="btn">Thanh toán</button>
                }
            </div>
        </div>
    </div>
</div>





