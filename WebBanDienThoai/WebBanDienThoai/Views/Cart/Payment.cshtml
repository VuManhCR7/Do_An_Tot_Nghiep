@model List<WebBanDienThoai.Models.CartItem>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
@{
    ViewBag.Title = "Payment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main">
    <div class="content">
        <div class="content-top">
            <div class="heading">
                <h3>Xác nhận thanh toán</h3>
            </div>
            <div class="clear"></div>
        </div>
        <div class="section group" style="display: grid;">
            @if (Model.Count > 0)
            {
                <table class="table" style="margin-top: 20px;">
                    <thead>
                        <tr align="center">
                            <th>Mã SP</th>
                            <th>Tên SP</th>
                            <th>Ảnh</th>
                            <th>Số lượng</th>
                            <th>Đơn giá</th>
                            <th>Thành tiền</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr align="center">
                                <td>@item.Product.ID</td>
                                <td>@item.Product.Name</td>
                                <td><img src="~/wwwroot/images/Products/@item.Product.Image" width="100" /></td>
                                <td><input type="text" class="txtQuantity" data-id="@item.Product.ID" value="@item.Quantity" /></td>
                                <td>@item.Product.Price.GetValueOrDefault(0).ToString("N0")</td>
                                <td>@((item.Product.Price.GetValueOrDefault(0) * item.Quantity).ToString("N0"))</td>
                                <td><a href="" data-id="@item.Product.ID" class="btn-delete">Xoá</a></td>
                            </tr>

                        }
                    </tbody>
                </table>             
            }        
        </div>
        <div class="section group">
            <div class="col-md-6">
                @using (Html.BeginForm("Payment", "Cart", FormMethod.Post))
                {
                    <div class="form-group">
                        <label>Mã người nhận</label>
                        <input name="userID" class="form-control" />
                    </div>
                    @*<div class="form-group">
                        <label>Trạng thái</label>
                        <input name="status" class="form-control" />
                    </div>*@
                    <div class="form-group">
                        <label>Địa chỉ</label>
                        <input name="address" class="form-control" />
                    </div>                
                    <button type="submit" class="btn">Thanh toán</button>
                }
            </div>
        </div>
    </div>
</div>





